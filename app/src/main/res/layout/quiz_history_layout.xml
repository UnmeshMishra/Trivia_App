<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    xmlns:android="http://schemas.android.com/apk/res/android" >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/quiz_game_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:padding="2dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/contestant_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/QuizHistoryTextStyle"
            />

        <TextView
            android:id="@+id/quiz_cricketer_question_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/QuizHistoryTextStyle"
            />
        <TextView
            android:id="@+id/quiz_cricketer_answer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/QuizHistoryTextStyle"
            />

        <TextView
            android:id="@+id/quiz_flag_question_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/QuizHistoryTextStyle"
            />

        <TextView
            android:id="@+id/quiz_flag_answer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/QuizHistoryTextStyle"
            />

    </LinearLayout>

</RelativeLayout>
</androidx.cardview.widget.CardView>